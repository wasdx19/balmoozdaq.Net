@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject RoleManager<IdentityRole> roleManager;


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>


<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Admin</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" asp-controller="center" asp-action="index">Education center</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-controller="course" asp-action="index">Course</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-controller="coursetype" asp-action="index">Course type</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-controller="weekday" asp-action="index">Weekday</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" asp-controller="coursetime" asp-action="index">Course time</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Roles
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" asp-controller="administration" asp-action="ListRoles">List role</a>
          <a class="dropdown-item" asp-controller="administration" asp-action="CreateRole">Create role</a>
          <a class="dropdown-item" asp-controller="administration" asp-action="EditRole">Edit role</a>
          <a class="dropdown-item" asp-controller="administration" asp-action="EditUserRole">Edit user role</a>
        </div>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0" method="post" asp-controller="account" asp-action="logout">
      @if (SignInManager.IsSignedIn(User))
        {               
           <button type="submit" style="width:auto"class="nav-link btn btn-link py-0">Logout @User.Identity.Name</button>
        }
        else
        {
           <a class="nav-link" asp-controller="account" asp-action="login">Login</a>
           <a class="nav-link" asp-controller="account" asp-action="register">Register</a>    
        }
    </form>
  </div>
</nav>
